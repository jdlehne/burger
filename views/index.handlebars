<div class="container">
  <header>Eat Burgerz</header>

  <div class="row">
    <div class="col-md-4" id="eatBurgs">
      <ul style="list-style: none;">
        {{#each burger_name}}
        {{#unless this.devoured}}
          <div>
            <li>
              <p id="listBurg">
                {{this.id}}. {{this.burger_name}}
                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <button id="eatBtn" type="submit">Devour</button>
                </form>
              </p>
            </li>
          </div>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-4">
      <img src="/assets/img/8bitburger.jpg">
    </div>

    <div class="col-md-4" id="ateBurg">
      <ul style="list-style: none;">
        {{#each burger_name}}
          {{#if this.devoured}}
            <li>
              <p id="listBurg">
                {{this.id}}. {{this.burger_name}}
              </p>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
  <!---end row---->

  <!--Add Burger section-->
  <div class="row">
    <div class="col-md-12" id="addBurg">
      <h2>Add Burger</h2>
      <form method="POST" action="/" class="button-size">
        <textarea type="text" name="burger_name"></textarea>
        <button type="submit">Add This Burger!</button>
      </form>
    </div>
  </div>

</div>
<!--close container-->
